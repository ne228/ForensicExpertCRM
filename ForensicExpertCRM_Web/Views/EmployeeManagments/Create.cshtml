@using ForensicExpertCRM_Web.Data.Domain;
@model             EmployeeManagment

@{
    ViewData["Title"] = "Создать";
}

<h1 align="center">Создать управление сотрудника</h1>


<hr />
<div class="row w-100">
    <div class="col-md-4 w-100">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Адрес</label>
                <input asp-for="Address" class="form-control" id="suggest" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group"> 
                <input type="submit" value="Создать" class="btn btn-primary w-100"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ya.js" asp-append-version="true"></script>
}
