@model Expert

@{
    ViewData["Title"] = "Эксперт";
}

<h1 align="center">Эксперт</h1>

<div>
    <hr />
    <div class="details">
        <div class="details-item">
            <div class="details-item-label">
                Имя
            </div>

            <div class="details-item-value">
                @Model.Name
            </div>
        </div>

        <div class="details-item">
            <div class="details-item-label">
                Подразделение
            </div>

            <div class="details-item-value">
                <a asp-action="Details" asp-controller="ExpertManagments" asp-route-Id="@Model.ExpertManagment.Id">@Model.ExpertManagment.Name</a>
            </div>
        </div>

        <div class="details-item">
            <div class="details-item-label">
                Рэйтинг
            </div>

            <div class="details-item-value">
                @Model.Rating
            </div>
        </div>

      


        <div class="details-item">
            <div class="details-item-label">
                Виды эспертизы
            </div>
            @foreach (var typeExpertise in Model.TypesExpertise)
            {
                <div class="">
                    @typeExpertise.Name
                </div>
            }
        </div>

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>