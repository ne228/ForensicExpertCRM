@using ForensicExpertCRM_Web.Models.Expertise;
@model AcceptRatingViewModel

<form asp-action="AcceptRating">
    <div class="accept-rating details-item">


        <div class="accept-rating-label">
            <div>
                <label class="form-label">
                    Оцените эксперта:
                </label>
            </div>
            <div class="question" id="q1">
                <input type="radio" name="rating" id="a1" value="1">
                <label for="a1"></label>
                <input type="radio" name="rating" id="a2" value="2">
                <label for="a2"></label>
                <input type="radio" name="rating" id="a3" value="3">
                <label for="a3"></label>
                <input type="radio" name="rating" id="a4" value="4">
                <label for="a4"></label>
                <input type="radio" name="rating" id="a5" value="5">
                <label for="a5"></label>
            </div>
        </div>

        @*<span asp-validation-for="Rating" class="text-danger"></span>*@
        <input type="hidden" asp-for="ExpertiseId" value="@Model.ExpertiseId" class="form-control" />

        <div class="accept-rating-btn">
            <button type="submit" class="btn btn-primary">Отправить оценку</button>
        </div>
    </div>


</form>

