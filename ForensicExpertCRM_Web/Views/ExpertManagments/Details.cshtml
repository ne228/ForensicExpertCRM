@using ForensicExpertCRM_Web.Data.Domain;
@model ExpertManagment

@{
    ViewData["Title"] = "Управление эксперта";
}

<h1>Управление эксперта</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>

    @{
        <ul class="list-group">
            <li align="center" class="list-group-item">
                <h3>Сотрудники</h3>
            </li>
            @foreach (var expert in Model.Experts)
            {
                <li class="list-group-item">@expert.Name</li>
            }
        </ul>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
